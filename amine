<body>

  <div class="box">
    <h2>🔐 WiFi Password Generator</h2>
    <p>أدخل اسم الشبكة (SSID) بالشكل: fh_1a9700</p>
    <input type="text" id="ssidInput" placeholder="fh_1a9700">
    <button onclick="generatePassword()">🔍 توليد الباسورد</button>
    <button onclick="copyPassword()">📋 نسخ</button>
    <div id="output">Status: بانتظار الإدخال...</div>
  </div>

  <script>
    const map = {
      '0': 'f', '1': 'e', '2': 'd', '3': 'c',
      '4': 'b', '5': 'a', '6': '9', '7': '8',
      '8': '7', '9': '6', 'a': '5', 'b': '4',
      'c': '3', 'd': '2', 'e': '1', 'f': '0'
    };

    let lastPassword = '';

    function generatePassword() {
      const input = document.getElementById('ssidInput').value.trim();
      const output = document.getElementById('output');

      const parts = input.split('_');
      if (parts.length < 2 || !parts[1]) {
        output.textContent = "⚠️ تأكد من كتابة الاسم بشكل: اسم_رموز";
        return;
      }

      const hex = parts[1].toLowerCase();
      let decoded = '';
      for (let ch of hex) {
        decoded += map[ch] || '?';
      }

      lastPassword = "wlan" + decoded;
      output.textContent = `🔓 كلمة السر المقترحة: ${lastPassword}`;
    }

    function copyPassword() {
      if (!lastPassword) return;
      navigator.clipboard.writeText(lastPassword).then(() => {
        alert("✅ تم نسخ الباسورد!");
      });
    }
  </script>

</body>
</html>
